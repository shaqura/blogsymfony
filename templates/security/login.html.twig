{% extends 'base.html.twig' %}

{% block body %}

    <h1>Login </h1>
	<br/>
	<br/>
	{% if error %}
		<div class="alert alert-danger">
		{{ error.messageKey | trans(error.messagedata,'security') }}
		</div>
	{% endif %}
	
    <form action="{{ path('security_login') }}" method="post">
	<div class="form-group">
		<input placeholder="Adresse email ..." required name="_username" type="text" class="form-control" valse="{{ last_username}}">
	</div>
	<div class="form-group">
		<input placeholder="Mot de pass ..." required name="_password" type="password" class="form-control">
	</div>
	<div class="form-group">
		<button type="submit" class="btn btn-success"> connection </button>
	</div>
	
	<div class="form-group">
	 <a class="nav-link active" href="{{ path('security_registration')}}">You are a New user ??? </a>
	 </div>
</form>

{% endblock %}
